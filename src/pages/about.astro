---
import BaseLayout from "../layouts/BaseLayout.astro";

type idolType = {
	name: string;
	advantage: string[];
}
type myselfType = {
	name: string;
	local: string;
	occupation: string;
	age: number;
	hobby: string[];
	idol: idolType[];
}

const title = '关于'
const myself: myselfType = {
	name: 'sukun',
	local: '中国-西安',
	occupation: '前端开发者',
	age: 25,
	hobby: ['代码', '足球', '听书'],
	idol: [{
		name: '樊登老师',
		advantage: ['博学多识', '温文尔雅']
	}]
}
---

<BaseLayout title={title}>
	<h1>关于我</h1>
	<p>
		大家好，我的名字是<b>苏昆</b>，{myself.age}岁，是一个{myself.occupation}，目前在{myself.local}生活和工作。欢迎大家来到西安～
	</p>
	<p>
		我喜欢
		<span>{myself.hobby[0]},</span>
		<span>{myself.hobby[1]},</span>
		<span>{myself.hobby[2]}</span>
	</p>
	{
		myself.idol.length ? <p>
			我的偶像是{myself.idol[0].name},
			我希望自己未来会像{myself.idol[0].name}那样{
			myself.idol[0].advantage.map(
				(item, index) => index === myself.idol[0].advantage.length - 1 ? `${item}。` : `${item}、`
			)}
		</p> : null
	}
</BaseLayout>